<config>
    <sections>
        <eva translate="label" module="evasettings">
            <label>Gala Eva Theme Settings</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
				<color translate="label">
					<label>Fonts, Colors &amp; Backgrounds</label>
					<frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>  
					 <fields>
						<body_font translate="label">
                            <label>Body Font:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Default font. eg: 12px/1.5 Arial, sans-serif
							]]></comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </body_font>
						<body_bg_color translate="label">
                            <label>Page Background Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Eg: #ffffff
							]]></comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </body_bg_color>
						<body_bg_pattern translate="label">
                            <label>Page Background Pattern:</label>
							<comment><![CDATA[
								Specify body background image in folder <strong>skin/frontend/galaeva/default/images/</strong><br/>
								Eg: pattern/1.png
							]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </body_bg_pattern>
						<link_color translate="label">
                            <label>Link Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Hyperlink's color (A tag). Eg: #c20066
							]]></comment>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </link_color>
						<header_bg_image translate="label">
                            <label>Header Background Image:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Background image of the header (top of page), look in folder <strong>skin/frontend/galaeva/default/images/</strong><br/>
								Eg: header_top.png
							]]></comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </header_bg_image>
						<nav_bg_image translate="label">
                            <label>Main Menu Background Image:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
							<comment><![CDATA[
								Background image of the main horizontal menu, look in folder <strong>skin/frontend/galaeva/default/images/</strong><br/>
								Eg: bg_menu.png
							]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nav_bg_image>
						<nav_text_color translate="label">
                            <label>Main Menu Text Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Default text color of the main menu. Eg: #bebebe
							]]></comment>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nav_text_color>
						<nav_top_menu_font translate="label">
                            <label>Main Menu Top Level Font:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Font of the top level of the main menu. Eg: normal bold 12px/1.55 Arial,sans-serif
							]]></comment>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nav_top_menu_font>
						<nav_top_menu_text_color translate="label">
                            <label>Main Menu Top Level Text Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Color of the top level of the main menu. Eg: #ffffff
							]]></comment>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nav_top_menu_text_color>
						<nav_top_menu_text_hover_color translate="label">
                            <label>Main Menu Top Level Hover Text Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Hover color of the top level of the main menu. Eg: #ffffff
							]]></comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nav_top_menu_text_hover_color>
						<nav_sub_menu_font translate="label">
                            <label>Main Menu Sub Level Font:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Font of the sub menu of the main menu. Eg: normal 12px/1.55 Arial,sans-serif
							]]></comment>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nav_sub_menu_font>
						<nav_sub_menu_text_color translate="label">
                            <label>Main Menu Sub Level Text Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Color of the sub menu of the main menu. Eg: #bebebe
							]]></comment>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nav_sub_menu_text_color>
						<nav_sub_menu_text_hover_color translate="label">
                            <label>Main Menu Sub Level Hover Text Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Hover color of the sub menu of the main menu. Eg: #ffffff
							]]></comment>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nav_sub_menu_text_hover_color>
						<caption_bg_color translate="label">
                            <label>Caption Background Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Background color of the caption such as block title or similar. Eg: #000
							]]></comment>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </caption_bg_color>
						<block_title_font translate="label">
                            <label>Block Title Font:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Font of block title. Eg: bold 14px/31px Arial, sans-serif
							]]></comment>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </block_title_font>
						<block_title_color translate="label">
                            <label>Block Title Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Color of block title. Eg: #ffffff
							]]></comment>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </block_title_color>
						<secondary_color translate="label">
                            <label>Secondary Color:</label>
                            <frontend_type>text</frontend_type>
							<comment><![CDATA[
								Apply to color of special text, special elements... Eg: #AB0051
							]]></comment>
                            <sort_order>17</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </secondary_color>
					</fields>
				</color>
                <image translate="label">
                    <label>Product Thumbnails &amp; Color Swatches</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>  
					 <fields>
                        <grid_thumb_width translate="label">
                            <label>Thumbnail Width on Category page in Grid mode </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </grid_thumb_width>
                        <grid_thumb_height translate="label comment">
                            <label>Thumbnail Height on Category page in Grid mode</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </grid_thumb_height>
						<grid_thumb_bgcolor translate="label">
                            <label>Thumbnail Background color on Category page in Grid mode</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                           <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </grid_thumb_bgcolor>
                        <listing_thumb_width translate="label comment">
                            <label>Thumbnail Width on Category page in List mode</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </listing_thumb_width>
						<listing_thumb_height translate="label">
                            <label>Thumnail Height on Category page in List mode </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                             <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </listing_thumb_height>
                        <listing_thumb_bgcolor translate="label comment">
                            <label>Thumbnail Background color on Category page in List mode</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                             <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </listing_thumb_bgcolor>
						<base_image_width translate="label">
                            <label>Image Width on Product detail page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </base_image_width>
                        <base_image_height translate="label comment">
                            <label>Image Height on Product detail page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </base_image_height>
						<base_image_bgcolor  translate="label">
                            <label>Image Background on Product detail page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                             <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </base_image_bgcolor>
                        <thumb_base_width translate="label comment">
                            <label>Thumbnail Width on Product detail page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thumb_base_width>
						<thumb_base_height translate="label">
                            <label>Thumbnail Height on Product detail page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>11</sort_order>
                             <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thumb_base_height>
                        <thumb_base_bgcolor translate="label comment">
                            <label>Thumnail Background color on Product page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thumb_base_bgcolor>
						<related_width translate="label">
                            <label>Thumbnail Width on Related block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>13</sort_order>
                             <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </related_width>
                        <related_height translate="label comment">
                            <label>Thumnail Height on Related block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </related_height>
						<related_bgcolor translate="label">
                            <label>Thumbnail Background color on Related block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                             <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </related_bgcolor>
                        <crosssell_width translate="label comment">
                            <label>Thumbnail Width on Crossell block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>16</sort_order>
                           <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </crosssell_width>
						<crosssell_height translate="label">
                            <label>Thumbnail Height on Crossell block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>17</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </crosssell_height>
                        <crosssell_bgcolor translate="label comment">
                            <label>Thumbnail Background color on Crossell block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>18</sort_order>
                           <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </crosssell_bgcolor>
						<upsell_width translate="label">
                            <label>Thumbnail Width on Upsell block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>19</sort_order>
                           <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </upsell_width>
                        <upsell_height translate="label comment">
                            <label>Thumbnail Height on Upsell block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </upsell_height>
						<upsell_bgcolor translate="label">
                            <label>Thumnail Background color on Upsell block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </upsell_bgcolor>
                        <widget_width translate="label comment">
                            <label>Thumbnail Width on Widget</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>22</sort_order>
                             <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </widget_width>
						<widget_height translate="label">
                            <label>Thumbnail Height on Widget</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>23</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </widget_height>
                        <widget_bgcolor translate="label comment">
                            <label>Thumbnail Background color on Widget</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>24</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </widget_bgcolor>
						<option_swatches translate="label comment">
							<label>Custom Option Swatches</label>
							<frontend_type>textarea</frontend_type>
                            <sort_order>26</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment><![CDATA[
								<p>Format: <em>[option label]</em> : <em>[option value]</em> = <em>[swatch image]</em></p>
								<p>Example:</p>
								<p>
								Size : Small = size-small.png<br/>
								Size : Medium = size-medium.png<br/>
								Size : Large = size-large.png<br/>
								Color : Red = color-red.png<br/>
								Color : Green = color-medium.png<br/>
								Color : Blue = color-blue.png<br/>
								Color : Yellow = color-yellow.png<br/>
								</p>
								<p>Swatch images should be uploaded in <strong>media/swatches/</strong></p>
								]]></comment>
						</option_swatches>
                    </fields>
                </image>
			</groups>
        </eva>
    </sections>
</config>
