			jQuery(function($) {

			 $('#detail-slide-grid-0').hide();


			 $('#slide-grid-0')
			 .bind('mouseover', showMenu1)
			 .bind('click', showMenu1)
			 .bind('mouseout', hideMenu1);

			 $('#detail-slide-grid-0')
			 .bind('mouseover', showMenu1)
			 .bind('click', hideMenu1)
			 .bind('mouseout', hideMenu1);

			 var timeout = null;
			 function hideMenu1() {
			 if (timeout)
			 clearTimeout(timeout);

			 timeout = setTimeout(function() {
			 timeout = null;
			 $('#detail-slide-grid-0').slideUp();
			 }, 200);
			 }

			 function showMenu1() {
			 if (timeout)
			 clearTimeout(timeout);

			 timeout = setTimeout(function() {
			 timeout = null;
			 $('#detail-slide-grid-0').slideDown();
			 }, 200);
			 }
			}); 
