<script>
var h1 = jQuery('.block-footer-1').height();
var h2 = jQuery('.block-footer-2').height();
var h3 = jQuery('.block-footer-3').height();
var h4 = jQuery('.block-footer-4').height();
var h5 = jQuery('.currency-language-newletter-4').height();
var max =0;
var heights = new Array(h1,h2,h3,h4,h5);
for(var i=0;i<heights.length;i++)
{
	if(heights[i]>max)
		max = heights[i];
}
jQuery('.block-footer-1').height(max);
jQuery('.block-footer-2').height(max);
jQuery('.block-footer-3').height(max);
jQuery('.block-footer-4').height(max);
jQuery('.currency-language-newletter-4').height(max);
</script>
